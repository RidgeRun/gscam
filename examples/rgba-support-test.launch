<launch>
  <!-- This launchfile should bring up a node that broadcasts a ros image
       transport on /gst/camera/image_raw, video coming from a GStreamer pipeline -->

  <node ns="gst" name="gscam_driver_v4l" pkg="gscam" type="gscam" output="screen">
    <param name="camera_name" value="default"/>
    <param name="camera_info_url" value="package://gscam/examples/uncalibrated_parameters.ini"/>
    <param name="gscam_config" value="shmsrc socket-path=/tmp/blah ! video/x-raw,format=YUY2, width=640,height=480,framerate=30/1 ! videoconvert"/>
    <param name="frame_id" value="/gst_frame"/>
    <param name="sync_sink" value="true"/>
    <param name="image_encoding" value="rgba8"/>
  </node>

</launch>